<!doctype html>
<html>
  <head>
    <title>CriSee</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">

    <!-- CSS -->
    <link href="css/bootstrap.css" rel="stylesheet">
    <link href="css/bootstrap-theme.css" rel="stylesheet">
    <link href="css/index.css" rel="stylesheet">
    <link href="css/listview.css" rel="stylesheet">
    <link href="css/navbar.css" rel="stylesheet">

    <!-- JavaScript -->
    <script src="js/apple-mobile-webapp.js" ></script>
  </head>
  <body>
    <!-- header -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <div class="btn-group btn-group-justified">
          {{#if monochromatic}}
          <a class="btn btn-default" role="button" href="/calendar?monochromatic=1">
          {{else}}
          <a class="btn btn-default" role="button" href="/calendar">
          {{/if}}
            <span class="glyphicon glyphicon-calendar"></span> Calendar View
          </a>
          {{#if monochromatic}}
          <a class="btn btn-default active" role="button" href="/list?monochromatic=1">
          {{else}}
          <a class="btn btn-default active" role="button" href="/list">
          {{/if}}
            <span class="glyphicon glyphicon-list"></span> List View
          </a>
        </div>
      </div>
    </div>
    </nav>
    <!-- footer -->
    <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <div class="btn-group btn-group-justified">
          <a class="btn btn-default" role="button" href="/">
            <span class="glyphicon glyphicon-home"></span>
          </a>
          <a class="btn btn-default" role="button" href="/help">
            <span class="glyphicon glyphicon-question-sign"></span>
          </a>
          <a class="btn btn-default" role="button" href="/settings">
            <span class="glyphicon glyphicon-cog"></span>
          </a>
        </div>
      </div>
    </div>
    </nav>


    <div class="container">
      <div class="listview">

        {{#if monochromatic}}
          <a href="/addevent?monochromatic=1" class="btn btn-primary btn-lg btn-block" role="button">Add Event</a>
        {{else}}
          <a href="/addevent" class="btn btn-primary btn-lg btn-block" role="button">Add Event</a>
        {{/if}}

        <table>
        {{#if monochromatic}}
          {{#each events}}
          <tr><td class>
              <a href="/editevent?id={{_id}}&monochromatic=1" class="btn btn-default btn-lg btn-block active" id="event"> <b>{{description}}</b> <span style="color:grey;">{{deadline}}</span> </a>
            <!-- <td class="listview-elem">
              <a href="/editevent?id={{_id}}">{{description}} </a> -->
          </td></tr>
          {{/each}}
        {{else}}
          {{#each events}}
          <tr><td class>
              <a href="/editevent?id={{_id}}" class="btn btn-default btn-lg btn-block active" id="event"> <b>{{description}}</b> <span style="color:grey;">{{deadline}}</span> </a>
            <!-- <td class="listview-elem">
              <a href="/editevent?id={{_id}}">{{description}} </a> -->
          </td></tr>
          {{/each}}
        {{/if}}
        </table>
      </div>

    </div>

    <!-- JavaScript -->
    <script src="js/jquery-1.11.0.js"></script>
    <script src="js/bootstrap.js"></script>
  </body>
</html>
