<!doctype html>
<html>
  <head>
    <title>CriSee</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">

    <!-- CSS -->
    <link href="css/bootstrap.css" rel="stylesheet">
    <link href="css/bootstrap-theme.css" rel="stylesheet">
    <link href="css/signin.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <img id="logo" src="/images/crisee-logo.png" class="img-responsive img-rounded"/>

      <form id="loginForm" role="form" method="post" action="/signin">
        <div class="form-group">
          <label for="username">Username:</label>
          <input type="text" class="form-control" id="username" placeholder="Username" name="username">
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" class="form-control" id="password" placeholder="Password" name="password">
        </div>
        <div class="form-group">
          <input type="checkbox" id="remember" value="the 5th of november" name="remember"></input>
          <label for="remember">Remember me</label>
        </div>
        <input style="width:65%" type="submit" id="submitBtn" class="btn btn-default" value="Sign in"></input>
        <a href="/signup"><input style="width:30%" type="button" class="btn btn-primary pull-right" value="Sign up"></input></a>
      </form>
    </div>

    <!-- JavaScript -->
    <script src="js/jquery-1.11.0.js"></script>
    <script src="js/bootstrap.js"></script>
  </body>
</html>
